<div class="custom-wrapper">
<%= image_tag('logo.svg', alt: 'logo Image', class: 'logo') %>
<div class="content">
<h2>Welcome!</h2>
<p class="text">Login to continue.</p>

<%= form_with model: @user, url: users_path, method: :post do |f| %>
  <div class="field-email">
    <%= f.label :email %>
    <%= f.email_field :email, placeholder: 'example@email.com', required: true, autocomplete: 'off', autofocus: 'autofocus'%>
  </div>
  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password%>
  </div>
  <div class="actions">
    <%= f.submit "Log In" %>
  </div>
<% end %>
</div>
</div>
